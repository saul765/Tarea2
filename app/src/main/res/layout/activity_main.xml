<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

    >
        <LinearLayout  style="@style/AppTheme.LinearLayout"
        >
            <EditText android:layout_width="wrap_content"
                      android:text=""
                      android:layout_height="wrap_content"
                      android:textSize="40sp"
                      android:textAlignment="center"
                      android:layout_gravity="center"
                     android:layout_weight="1"
                      android:layout_marginLeft="40dp"
                      android:layout_marginRight="40dp"

                      android:id="@+id/headText"
            />

        </LinearLayout>

        <LinearLayout  style="@style/AppTheme.LinearLayout"

        >
        <Button
                android:id="@+id/one"
                android:text="1"
                android:layout_marginStart="50dp"

                android:background="@drawable/round_button"
                style="@style/AppTheme.roundButton"

                android:layout_weight="1"

        />
            <Button
                    android:text="2"
                    android:id="@+id/two"
                    android:background="@drawable/round_button"
                    style="@style/AppTheme.roundButton"
                    android:layout_weight="1"

            />
            <Button
                   android:layout_marginEnd="50dp"
                    android:id="@+id/three"
                    android:text="3"
                    android:background="@drawable/round_button"
                    style="@style/AppTheme.roundButton"
                    android:layout_weight="1"

            />
        </LinearLayout>

        <LinearLayout  style="@style/AppTheme.LinearLayout"
        >
            <Button
                    android:text="4"
                    android:layout_marginStart="50dp"
                    android:id="@+id/four"
                    android:background="@drawable/round_button"
                    style="@style/AppTheme.roundButton"
                    android:layout_weight="1"

            />
            <Button
                    android:id="@+id/five"
                    android:text="5"
                    android:background="@drawable/round_button"
                    style="@style/AppTheme.roundButton"
                    android:layout_weight="1"

            />
            <Button
                    android:layout_marginEnd="50dp"
                    android:id="@+id/six"
                    android:text="6"
                    android:background="@drawable/round_button"
                    style="@style/AppTheme.roundButton"
                    android:layout_weight="1"

            />

        </LinearLayout>
        <LinearLayout  style="@style/AppTheme.LinearLayout"
        >
            <Button
                    android:text="7"
                    android:layout_marginStart="50dp"
                    android:id="@+id/seven"
                    android:background="@drawable/round_button"
                    style="@style/AppTheme.roundButton"
                    android:layout_weight="1"

            />
            <Button
                    android:text="8"
                    android:id="@+id/eight"
                    android:background="@drawable/round_button"
                    style="@style/AppTheme.roundButton"
                    android:layout_weight="1"

            />
            <Button
                    android:text="9"
                    android:layout_marginEnd="50dp"
                    android:id="@+id/nine"
                    android:background="@drawable/round_button"
                    style="@style/AppTheme.roundButton"
                    android:layout_weight="1"

            />
        </LinearLayout>
        <LinearLayout  style="@style/AppTheme.LinearLayout"
        >
            <Button
                    android:text="*"
                    android:layout_marginStart="50dp"
                    android:id="@+id/cButton"
                    android:background="@drawable/round_button"
                    style="@style/AppTheme.roundButton"
                    android:layout_weight="1"

            />
            <Button
                    android:text="0"
                    android:id="@+id/zero"
                    android:background="@drawable/round_button"
                    style="@style/AppTheme.roundButton"
                    android:layout_weight="1"

            />
            <ImageButton
                    android:layout_marginEnd="50dp"
                    android:id="@+id/erase"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/white_transparesnt"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_backspace_black_24dp"
                    android:layout_weight="1"

            />
        </LinearLayout>
        <LinearLayout
                style="@style/AppTheme.LinearLayout"
        >
            <Button
                    android:id="@+id/callButton"
                    style="@style/AppTheme.callButton"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/call"
            />
        </LinearLayout>


    </LinearLayout>

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:id="@+id/blackFrame"
                 android:visibility="gone"
                 android:background="@color/black_transparent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">



            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                     android:text="@string/calling"
                      android:textSize="90sp"
                      android:id="@+id/callingTxtview"
                      android:layout_marginTop="150dp"
                      android:layout_gravity="center_horizontal|center_vertical"
                      android:textColor="@color/white"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="number"
                      android:id="@+id/callingNumberTxtview"
                      android:layout_gravity="center_horizontal|center_vertical"
                      android:textColor="@color/white"
                      android:textSize="80sp"
            />




        </LinearLayout>

    </FrameLayout>


</FrameLayout>